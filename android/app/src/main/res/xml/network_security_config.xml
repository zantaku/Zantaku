<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for all domains to match Expo Go behavior -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system"/>
            <!-- Trust user-added CA certificates -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Optional: Still maintain some security for sensitive domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">takiapi.xyz</domain>

        <domain includeSubdomains="true">magaapinovel.xyz</domain>
        <domain includeSubdomains="true">kamicom-dazaseals-projects.vercel.app</domain>
        <domain includeSubdomains="true">api.jikan.moe</domain>
        <domain includeSubdomains="true">graphql.anilist.co</domain>
        <domain includeSubdomains="true">cors-proxy.elfsight.com</domain>
        <domain includeSubdomains="true">corsproxy.io</domain>
        <domain includeSubdomains="true">proxy.cors.sh</domain>
        <domain includeSubdomains="true">yesgogogototheapi.xyz</domain>
        <domain includeSubdomains="true">shih.kaoru.cat</domain>
        <domain includeSubdomains="true">hianime.to</domain>
        <domain includeSubdomains="true">gogoanime.tel</domain>
        <domain includeSubdomains="true">jelleeapi.app</domain>
        <domain includeSubdomains="true">kamidb.online</domain>
        <domain includeSubdomains="true">www.kamidb.online</domain>
    </domain-config>
</network-security-config> 